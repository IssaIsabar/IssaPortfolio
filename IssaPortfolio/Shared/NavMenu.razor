@inject ILocalStorageService LocalStorage
@inject AuthenticationStateProvider AuthStateProvider

<nav class="navbar navbar-expand-sm bg-dark bg-opacity-50 navbar-dark">
    <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="Portfolio">Projects</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#">About me</a>
                </li>
                <AuthorizeView>
                    <NotAuthorized>
                        <a class="nav-link active" href="login">
                            <span class="bi bi-box-arrow-in-right" aria-hidden="true">Login</span>
                        </a>
                    </NotAuthorized>
                    <Authorized>
                        <a class="nav-link active" @onclick="Logout">
                            <span class="oi oi account-logout" aria-hidden="true">Logout</span>
                        </a>
                    </Authorized>
                </AuthorizeView>
            </ul>
        </div>
    </div>
</nav>

@code {
    private async void Logout()
    {
        await LocalStorage.RemoveItemAsync("username");
        await AuthStateProvider.GetAuthenticationStateAsync();
    }
}
